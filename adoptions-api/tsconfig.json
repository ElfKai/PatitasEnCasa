{
  "compilerOptions": {
  
    "target": "es2020",               
    "module": "commonjs",             
    "lib": ["es6", "dom"],            
    "outDir": "./dist",               
    "rootDir": "./src",               
    "removeComments": true,           

    "esModuleInterop": true,          
    "resolveJsonModule": true,        
    
   
    "strict": true,                   
    "noImplicitAny": true,            
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*"],            
  "exclude": ["node_modules", "**/*.test.ts"]
}